  
{
  "manifest_version": 2,
  "version": "0.0.1",
  "short_name": "GithubEE",
  "name": "GithubEmojiExtension",
  "description": "GithubのEmoji入力機能を拡張する",
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["main.js"]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
